<Window x:Class="ZoeProg.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZoeProg"
        xmlns:cmm="https://www.zoeprog.com/2017/common"
         xmlns:prism="http://www.codeplex.com/prism"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="825">
  <Window.Resources>
    <Style TargetType="TabItem">
      <Setter Property="Header" Value="{Binding DataContext.Title}" />
    </Style>
  </Window.Resources>
  <Grid Margin="5">
    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition Height="auto" />
      <RowDefinition />
    </Grid.RowDefinitions>

    <TabControl Grid.Row="0" TabStripPlacement="Left" prism:RegionManager.RegionName="{x:Static cmm:RegionNames.TabRegion}">
      <TabItem>Installed progress</TabItem>
      <TabItem>Uninstalled Programm</TabItem>
    </TabControl>

    <!--spliiter-->
    <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" />

    <!--LogBuch-->
    <ContentControl  Grid.Row="2" prism:RegionManager.RegionName="{x:Static cmm:RegionNames.LoggerRegion}" />
  </Grid>
</Window>