<Application x:Class="ZoeProg.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:mui="http://firstfloorsoftware.com/ModernUI"

             xmlns:local="clr-namespace:ZoeProg.Views">
    <Application.Resources>
        <ResourceDictionary>

        
           
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/FirstFloor.ModernUI;component/Assets/ModernUI.xaml" />
                <ResourceDictionary Source="/FirstFloor.ModernUI;component/Assets/ModernUI.Dark.xaml" />
               
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="local:Shell">
                <Setter Property="ContentLoader" Value="{DynamicResource PrismContentLoader}" />
                <Setter Property="Width" Value="10"/>
            </Style>

            <Style x:Key="O" TargetType="mui:ModernWindow">
                <Setter Property="ContentLoader" Value="{DynamicResource PrismContentLoader}" />
                <Setter Property="Width" Value="10"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>